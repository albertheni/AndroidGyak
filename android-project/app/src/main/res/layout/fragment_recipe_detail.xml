<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".ui.recipe.RecipeDetailFragment"
             android:background="@drawable/back4">


    <ImageView
            android:id="@+id/recipeImageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/recipeTitleView"
            app:layout_constraintDimensionRatio="16:9"/>

    <TextView
            android:id="@+id/recipeTitleView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/green"
            android:paddingStart="10dp"
            app:layout_constraintTop_toBottomOf="@+id/recipeImageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Recipe Title" />

    <TextView
            android:id="@+id/recipeRatingsView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/green"
            android:paddingStart="10dp"
            app:layout_constraintTop_toBottomOf="@+id/recipeTitleView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Ratings" />

    <TextView
            android:id="@+id/recipeTotalTimeView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/green"
            android:paddingStart="10dp"
            app:layout_constraintTop_toBottomOf="@+id/recipeRatingsView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Total Time" />

    <TextView
            android:id="@+id/recipeInstructionsView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/green"
            android:paddingStart="10dp"
            app:layout_constraintTop_toBottomOf="@+id/recipeTotalTimeView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Instructions" />

    <TextView
            android:id="@+id/recipeDescriptionView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/green"
            android:paddingStart="10dp"
            app:layout_constraintTop_toBottomOf="@+id/recipeInstructionsView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Description" />
    <Button
            android:text="Similar Recipes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recipeSimilarButton"
            android:textColor="@color/white"

            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.885" android:backgroundTint="@color/green"/>

</androidx.constraintlayout.widget.ConstraintLayout>