    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               tools:ignore="MissingConstraints"
               android:id="@+id/back"
               android:src="@drawable/back4"
               android:scaleType="centerCrop"
    />


    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/newRecipeTitleView"
            android:text="Enter a new recipe: "
            android:textColor="@color/black"
            android:textSize="20sp"
            android:paddingStart="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="96dp"
            android:breakStrategy="high_quality"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/newRecipeVideoUrlView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/newRecipeImageUrlView"
            android:autofillHints="VideoUrl"
            android:textColor="@color/black"
            android:inputType="textUri" android:layout_marginTop="4dp" app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/newRecipeDescriptionView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/newRecipeNameView"
            android:autofillHints="Description"
            android:textColor="@color/black"
            android:inputType="text" android:layout_marginTop="4dp" app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/newRecipeImageUrlView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/newRecipeDescriptionView"
            android:autofillHints="ImageUrl"
            android:textColor="@color/black"
            android:inputType="textUri" android:layout_marginTop="8dp" app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/newRecipeNameView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/newRecipeTitleView"
            android:autofillHints="Name"
            android:textColor="@color/black"
            android:inputType="text" android:layout_marginTop="4dp" app:layout_constraintHorizontal_bias="0.0"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/newRecipeSaveButton"
            android:text="Save"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginBottom="92dp" android:backgroundTint="@color/green"
            app:rippleColor="@android:color/holo_green_dark"/>


