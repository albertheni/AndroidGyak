<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome!\n\nto the TasteHarmony"
            android:textAlignment="center"
            android:textColor="@color/green"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/textView"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Where culinary creativity meets flavor fusion!\n Explore a world of delectable recipes, culinary inspiration, and the joy of cooking.\n Let's embark on a delicious journey together."
              app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="@+id/logo"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginTop="250dp"
              android:textColor="@color/green"
              android:textStyle="bold"
              android:textAlignment="center" android:id="@+id/textView2"/>
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:id="@+id/logo"
               android:src="@drawable/logo1" app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
               android:layout_marginBottom="250dp"
    />
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:id="@+id/gombocska"
            android:text="Get started"
            android:backgroundTint="@color/green"


    />


</androidx.constraintlayout.widget.ConstraintLayout>